#import <UIKit/UIKit.h>

@interface UIView (Tosat)

/**
 *  当前视图产生toast  产生于底部
 *
 *  @param message
 */
- (void)makeToast:(NSString *)message;

/**
 *  定制化产生toast的位置以及时间
 *
 *  @param message
 *  @param interval
 *  @param position 
 */
- (void)makeToast:(NSString *)message duration:(NSTimeInterval)interval position:(id)position;


@end
